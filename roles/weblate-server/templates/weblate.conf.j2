server {
	listen 80;
	server_name weblate;
	root {{ weblate_user_home }}/weblate;

	location /favicon.ico {
		alias {{ weblate_user_home }}/weblate/data/static/favicon.ico;
		expires 30d;
	}

	location /robots.txt {
		alias {{ weblate_user_home }}/weblate/data/static/robots.txt;
		expires 30d;
	}

	location /static {
		alias {{ weblate_user_home }}/weblate/data/static/;
		expires 30d;
	}

	location / {
		proxy_pass http://127.0.0.1:8008;
	}
}
